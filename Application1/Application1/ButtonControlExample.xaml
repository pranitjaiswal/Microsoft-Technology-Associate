<Window x:Class="Application1.ButtonControlExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ButtonControlExample" Height="300" Width="300">
    <Button Height="30" >
        <StackPanel Orientation="Horizontal">
            <Label Content="Stop"></Label>
            <Rectangle Fill="Red" Height="30" Width="30" Margin="5"></Rectangle>
        </StackPanel>
    </Button>
</Window>
