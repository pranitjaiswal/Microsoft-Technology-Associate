<Window x:Class="color_resources.nestedstackpanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NestedStackPanel" Height="300" Width="300">
   
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter Name :-" Width="165" FontSize="25" Margin="5"></Label>
            <TextBox x:Name="txtName" Width="100"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label Content="Enter Age :-" Width="165" FontSize="25" Margin="5"></Label>
            <TextBox x:Name="txtAge" Width="100"></TextBox>
        </StackPanel>
        
        <Button x:Name="BtnSubmit" Content="Submit" FontSize="20" Margin="5" HorizontalAlignment="Right" Click="BtnSubmit_Click"></Button>
    </StackPanel>
    
</Window>
