<Window x:Class="WpfApplication7.brush_resources"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="brush_resources" Height="300" Width="300">
    <Window.Resources>
        <LinearGradientBrush x:Key="lgb">
            <GradientStop Color="SkyBlue" Offset=".2"></GradientStop>
            <GradientStop Color="White" Offset=".4"></GradientStop>
            <GradientStop Color="SkyBlue" Offset=".6"></GradientStop>
            <GradientStop Color="White" Offset=".8"></GradientStop>
            <GradientStop Color="SkyBlue" Offset="1.0"></GradientStop>
        </LinearGradientBrush>
        <RadialGradientBrush x:Key="rgb">
            <GradientStop Color="SkyBlue" Offset=".2"></GradientStop>
            <GradientStop Color="White" Offset=".4"></GradientStop>
            <GradientStop Color="SkyBlue" Offset=".6"></GradientStop>
            <GradientStop Color="White" Offset=".8"></GradientStop>
            <GradientStop Color="SkyBlue" Offset="1.0"></GradientStop>
        </RadialGradientBrush>
    </Window.Resources>
    
    <StackPanel>
        
       <Button Background="{StaticResource lgb}" Content="Button 1" Height="30" FontSize="20"></Button>
       <Button Foreground="{StaticResource rgb}" Content="Button 2" Height="30" FontSize="20"></Button>

    </StackPanel>
</Window>
