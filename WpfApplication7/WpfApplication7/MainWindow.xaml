<Window x:Class="WpfApplication7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <StackPanel.Background>
            <LinearGradientBrush>
                <GradientStop Color="SkyBlue" Offset=".2"></GradientStop>
                <GradientStop Color="White" Offset=".4"></GradientStop>
                <GradientStop Color="SkyBlue" Offset=".6"></GradientStop>
                <GradientStop Color="White" Offset=".8"></GradientStop>
                <GradientStop Color="SkyBlue" Offset="1.0"></GradientStop>
            </LinearGradientBrush>
        </StackPanel.Background>
        <StackPanel Orientation="Horizontal">
        <Label Content="Name" FontSize="25" Width="100"></Label>
        <TextBox x:Name="txtName" FontSize="20" FontFamily="Comic Sans MS" Width="200"></TextBox>
        </StackPanel>
        
        <StackPanel Orientation="Horizontal">
            <Button Content="Grid" FontSize="20" Click="Button_Click_1"></Button>
            <Button Content="Clear" FontSize="20" Click="Button_Click_2"></Button>
        </StackPanel>
    </StackPanel>
</Window>
