<Window x:Class="BindingAction.SimpleSlider"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SimpleSlider" Height="300" Width="300" Loaded="Window_Loaded_1">
   
    <StackPanel>
        <TextBlock Margin="8" Text="Simple Slider" TextAlignment="Center" FontSize="20" Foreground="Pink" FontWeight="Bold"></TextBlock>
        <GroupBox Header="Source Object" BorderBrush="black" BorderThickness="3" Height="65">
            <Slider x:Name="sldsource" Value="5" Maximum="20" Minimum="1" Margin="8"></Slider>                               
        </GroupBox>
        <GroupBox Header="Target Object" BorderBrush="Black" BorderThickness="2">
            <TextBlock Height="50" x:Name="tbtarget" Background="SkyBlue" Margin="8"></TextBlock>
        </GroupBox>    
    </StackPanel>
    
    
</Window>
