<Window x:Class="WpfApplication3.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Window1" Height="300" Width="300">
   
    <StackPanel Height="300" Width="300">
        <Button Height="200" Width="200" FontSize="35" FontFamily="Comic Sans MS" Content="Submit">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Offset="0.1" Color="Black"></GradientStop>
                    <GradientStop Offset="0.2" Color="White"></GradientStop>
                    <GradientStop Offset="0.3" Color="Black"></GradientStop>
                    <GradientStop Offset="0.4" Color="White"></GradientStop>
                    <GradientStop Offset="0.5" Color="black"></GradientStop>
                    <GradientStop Offset="0.6" Color="White"></GradientStop>
                    <GradientStop Offset="0.7" Color="black"></GradientStop>
                    <GradientStop Offset="0.8" Color="White"></GradientStop>
                    <GradientStop Offset="0.9" Color="black"></GradientStop>
                    <GradientStop Offset="1.0" Color="White"></GradientStop>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </StackPanel>
</Window>
